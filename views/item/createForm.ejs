<h1>Create New Item</h1>

<div class="container">
  <form method='POST' action='/interface/item/create/'>
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" name="name" ">
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea rows="5" class="form-control" name="description" placeholder="searches will look for keywords you write here, so add lots of descriptive words!"></textarea>
    </div>
    <div class="form-group">
      <label for="imagelink">Image Link:</label>
      <input type="text" class="form-control" name="imagelink" placeholder="if using Imgur please use 'direct link'" >
    </div>
    <div class="form-group">
      <label for="valuation">Valuation:</label>
      <input type="number" class="form-control" name="valuation" >
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
  <br>
</div>
</body>
</html>